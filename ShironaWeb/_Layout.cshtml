@{
    var title = "「白菜アニメ」公式サイト";
    if (!string.IsNullOrWhiteSpace(Page.Title))
    {
        title = string.Format("{0} - {1}", Page.Title, title);
    }
}
<!DOCTYPE html>
<html>
<head>
    @if (Page.NoRobot ?? false)
    {
        <meta name="robots" content="noindex,nofollow" />
    }
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@title</title>
    <link href="/Content/Site.css" rel="stylesheet" />
    <script src="/Content/Navi.js" type="text/javascript"></script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-28950654-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    <div id="wrapper">
        <div id="header" class="clear">
            <div id="logo">
                <a href="/">
                    <img src="/Images/logo.png">
                </a>
            </div>
            <div id="navi">
                <ul id="dnavi">
                    <li>
                        @NaviImg(1, "/News")
                        <ul class="ddnavi">
                            <li><a href="/News">お知らせ</a></li>
                            @*                            <li><a href="/Recruitment">募集</a></li>*@
                        </ul>
                    </li>
                    <li>
                        @NaviImg(2, "/Staff")
                        <ul class="ddnavi">
                            <li><a href="/Staff">スタッフ</a></li>
                            <li><a href="/Cast">キャスト</a> </li>
                        </ul>
                    </li>
                    <li>
                        @NaviImg(3, "/Story")
                        <ul class="ddnavi">
                            <li><a href="/Story">ストーリー</a></li>
                            <li><a href="/Butai">舞台</a> </li>
                        </ul>
                    </li>
                    <li>
                        @NaviImg(4, "/Character")
                        <ul class="ddnavi">
                            <li><a href="/Character">相関図</a></li>
                            <li><a href="/Character?name=shirona">睦梨 白菜</a></li>
                            <li><a href="/Character?name=yukari">奈須 紫</a></li>
                            <li><a href="/Character?name=kanade">宝蓮寺 奏</a></li>
                            <li><a href="/Character?name=eiko">忍迅 栄子</a></li>
                            <li><a href="/Character?name=honoka">喜屋部 穂華</a></li>
                            <li><a href="/Character?name=sato">佐藤 空輝</a></li>
                            <li><a href="/Character?name=matsu">松 武雄</a></li>
                            <li><a href="/Character?name=yamamoto">山本 昌史</a></li>
                            <li><a href="/Character?name=gori">五里 蕉</a></li>
                            <li><a href="/Character?name=tomato">苫川 とまと</a></li>
                        </ul>
                    </li>
                    <li>
                        @NaviImg(5, "/Arasuji")
                        <ul class="ddnavi">
                            @{
                                string[] arasujis = Page.Arasujis;
                                for (int i = arasujis.Length - 1; i >= 0; i--)
                                {
                                    <li><a href="/Arasuji/@(i + 1)">あらすじ@(arasujis[i])</a></li>
                                }
                            }
                        </ul>

                    </li>
                    <li>
                        @NaviImg(6)
                        <ul class="ddnavi">
                            <li><a href="/Special_Block">ブロック崩し</a></li>
                            <li><a href="/Special_Questionnaire">アンケート</a></li>
                            <li><a href="~/Wallpaper">壁紙</a></li>
                        </ul>
                    </li>
                    <li>
                        @NaviImg(7, "/Link")
                        <ul class="ddnavi">
                            <li></li>
                        </ul>
                    </li>
                    <li>
                        @NaviImg(8, "/Contact")
                        <ul class="ddnavi">
                            <li><a href="/Contact">お問合せ</a></li>
                            <li>
                                <a href="/Guide">
                                    二次使用に<br>
                                    関して
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <script type="text/javascript">
                    var menu = new menu.dd("menu");
                    menu.init("dnavi", "menuhover");
                </script>
            </div>
        </div>
        <div id="content" class="ct">
            @RenderBody()
        </div>
        <div id="footer" class="ct">
            <p>&copy; 2012 ラマーズP | 白菜チーム</p>
        </div>
    </div>
</body>
</html>

@helper NaviImg(int index, string href = "#")
{
    var fullName = string.Format("/Images/Navi/{0}_{1}.png", Page.VisitId == index ? "visit" : "link", index);
    <a href="@href">
        <img src="@fullName" />
    </a>
}